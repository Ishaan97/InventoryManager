<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/ev_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/tv_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ev_item_list"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/et_qty"
        android:text="Quantity"
        android:textAlignment="viewStart"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_qty"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ev_item_list"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Qty"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_expiry_month"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_qty"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Expiry Month"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qty"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/et_expiry_month"
        android:text="Expiry Month"
        android:textAlignment="viewStart"
        android:textSize="18sp" />
</RelativeLayout>